<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="capitalria.mk.moviesfragment">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />


    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher"
        android:theme="@style/MyMaterialTheme">
        <activity android:name="capitalria.mk.moviesfragment.StarterActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="capitalria.mk.moviesfragment.MovieActivity" />
        <activity android:name="capitalria.mk.moviesfragment.MainActivity" />
        <activity
            android:name="capitalria.mk.moviesfragment.SearchResultsActivity"
            android:parentActivityName="capitalria.mk.moviesfragment.MainActivity">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="capitalria.mk.moviesfragment.MainActivity" />
        </activity>
    </application>

</manifest>